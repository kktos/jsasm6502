{
  "name": "jsasm6502",
  "version": "1.7.0",
  "type": "module",
  "author": "kktos",
  "description": "6502/65C02 assembler in typescript. Either as a CLI or a library.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kktos/jsasm6502.git"
  },
  "main": "libasm6502.js",
  "bin": {
    "asm6502": "asm6502.js"
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "rollup -c rollup.config.js libasm6502=src/lib/assembler.ts asm6502=src/cli/main.ts",
    "postbuild": "node tools/postbuild.js",
    "test": "vitest",
    "test:PolyAsm": "vitest polyasm/",
    "test-one": "node dist/asm6502.js test/asm/one.test.asm --conf test/asm/one.test.yaml",
    "test-main": "node dist/asm6502.js test/asm/main.test.asm --conf test/asm/main.yaml",
    "test-lstoff": "node dist/asm.js --no-listing test/asm/main.test.asm",
    "generate-test-data": "ts-node --esm test/generate-test-data.ts",
    "format": "biome format ./src",
    "lint": "biome check ./src",
    "lint:ci": "biome ci ./src",
    "lint:fix": "biome check --write --unsafe ./src",
    "format:fix": "biome format --write ./src",
    "publishIt": "cd dist && npm publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/yargs": "^17.0.35",
    "@vitest/ui": "^4.0.13",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "yargs": "^18.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "rollup"
    ]
  }
}
