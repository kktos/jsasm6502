{
  "name": "virtual-6502-asm",
  "version": "1.0.0",
  "type": "module",
  "description": "65c02 assembler highly inspired on virtual assembler by mass:werk",
  "exports": "./index.js",
  "scripts": {
    "build": "rimraf .dist/ && tsc && rollup -c",
    "test": "vitest",
    "test-main": "node src/main.js test/asm/main.test.asm --conf test/asm/main.yaml",
    "test-lstoff": "node src/main.js --no-listing test/asm/main.test.asm",
    "generate-test-data": "ts-node --esm test/generate-test-data.ts",
    "format": "biome format ./src",
    "lint": "biome check ./src",
    "lint:ci": "biome ci ./src",
    "lint:fix": "biome check --apply-unsafe ./src",
    "format:fix": "biome format --write ./src"
  },
  "author": "kktos",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.8.7",
    "@vitest/ui": "^0.34.6",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "yargs": "^17.7.2"
  }
}
